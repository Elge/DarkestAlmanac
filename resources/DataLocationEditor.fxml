<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          xmlns="http://javafx.com/javafx"
          fx:controller="de.sgoral.darkestalmanac.ui.DataLocationEditorController">

    <Label text="Data location" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
    <TextField fx:id="fileSelector" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"
               onMouseClicked="#onTextFieldClicked" editable="false" prefWidth="600"/>
    <Button text="Cancel" GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#onClickCancel"/>
    <Button text="Save" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#onClickSave"/>

</GridPane>
