<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="de.sgoral.darkestalmanac.ui.controllers.MainWindowController"
      prefHeight="400.0" prefWidth="600.0">
    <MenuBar fx:id="menuBar">
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem text="New" onAction="#onMenuNew"/>
                    <MenuItem text="Open" onAction="#onMenuOpen"/>
                    <MenuItem text="Save" onAction="#onMenuSave"/>
                    <MenuItem text="Save As" onAction="#onMenuSaveAs"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Exit" onAction="#onMenuExit"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <Pane fx:id="contentPane"/>
    <HBox>
        <Button fx:id="backButton" text="&lt;-"/>
    </HBox>
</VBox>
